<div class="container d-flex justify-content-center">
    <form asp-area="" asp-controller="Payment" asp-action="Add" method="post" class="g-3 w-75" id="addPaymentForm">
        <div class="form-row">
            <div class="mb-3">
                <label for="amount" class="form-label fw-bold">Amount</label>
                <input type="text" class="form-control" id="amount" name="Amount" required>
            </div>
            <div class="mb-3" hidden>
                <input type="number" class="form-control" id="customerId" name="CustomerId" value="@ViewData["customerId"]" min="1" required>
            </div>
            <button type="submit" class="btn btn-sm px-4 py-2 rounded-pill text-white fw-bold mt-3" style="background-color: #281600;">Submit</button>
        </div>
    </form>
</div>
